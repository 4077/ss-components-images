<div class="{__NODE_ID__}" instance="{__INSTANCE__}">

    <div class="cp">
        <div class="image_control {ENABLED_CLASS}">
            {TOGGLE_ORIGINAL_BUTTON}
            <div class="dimensions">
                <div class="knob {AUTO_WIDTH_KNOB_CLASS}">
                    {W_KNOB}
                    {TOGGLE_AUTO_WIDTH_BUTTON}
                </div>
                <div class="sep">
                    <div class="icon fa fa-times"></div>
                </div>
                <div class="knob {AUTO_HEIGHT_KNOB_CLASS}">
                    {H_KNOB}
                    {TOGGLE_AUTO_HEIGHT_BUTTON}
                </div>
            </div>
            <div class="resize_mode_container">
                <div class="resize_mode {RESIZE_MODE}">
                    <div class="wrapper"></div>
                    <div class="image"></div>
                </div>
            </div>
            <div class="prevent_upsize {PREVENT_UPSIZE_ENABLED}">
                <div class="icon arrows fa fa-expand"></div>
                <div class="icon ban fa fa-ban"></div>
            </div>
        </div>
    </div>

    <!-- href -->
    <div class="href_cp">
        {TOGGLE_BUTTON}

        <!-- href/image_control -->
        <div class="href_image_control {ENABLED_CLASS}">
            {TOGGLE_ORIGINAL_BUTTON}
            <div class="dimensions">
                {W_KNOB}
                <div class="sep">
                    <div class="icon fa fa-times"></div>
                </div>
                {H_KNOB}
            </div>
            <div class="resize_mode_container">
                <div class="resize_mode {RESIZE_MODE}">
                    <div class="wrapper"></div>
                    <div class="image"></div>
                </div>
            </div>
            <div class="prevent_upsize {PREVENT_UPSIZE_ENABLED}">
                <div class="icon arrows fa fa-expand"></div>
                <div class="icon ban fa fa-ban"></div>
            </div>
        </div>
        <!-- / -->
    </div>
    <!-- / -->

</div>
